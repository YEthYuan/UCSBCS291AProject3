<p>
    <strong>Author:</strong>
    <%= link_to post.name, User.find_by(name: post.name) %>
    <strong>Posted at:</strong>
    <%= post.created_at %>
</p>

<p>
    <%= link_to "Post:", post_path(post) %>
    <%= post.body %>
</p>

<ul>
  <% post.comments.each do |comment| %>
      <li>
        <p>
          <strong>Commenter:</strong>
          <%= comment.commenter %>
        </p>

        <p>
          <strong>Comment:</strong>
          <%= comment.body %> <font size=1>(<%= comment.created_at %>)</font>
        </p>
      </li>
  <% end %>
</ul>

<p>
    <%= link_to "Comments", post %> | <%= link_to "Delete Post", post, data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure? Comments affiliated to this post will also be deleted!"
    } %>
</p>